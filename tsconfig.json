{
    "compilerOptions": {
      "module": "system",
      "target": "ESNEXT",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "outFile": "build/main.js",
      "sourceMap": true
    },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}